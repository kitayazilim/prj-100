<!-- contact-section -->
<section class="contact-section sec-pad">
  <div class="auto-container">
    <div class="row clearfix">
      <div class="col-lg-5 col-md-12 col-sm-12 info-column">
        <div class="contact-info-box">
          <div class="sec-title style-two">
            <p class="lang" key="bizeulasin">{{bizeulasin}}</p>
            <h2 style="font-size:40px" class="lang" key="iletisimalt">{{iletisimdekalalt}}</h2>
          </div>
          <div class="text">
            <p class="lang" key="ziyaret">{{ziyaret}}</p>
          </div>
          <ul class="info-list clearfix">
            <li>
              <i class="far fa-map-marker-alt"></i>{{sitedata.adres}}
            </li>
            <li>
              <i class="far fa-phone"></i>
              <a href="tel:{{sitedata.tel}}">{{sitedata.tel}}</a>
            </li>
            <li>
              <i class="far fa-fax"></i>
              <a href="tel:{{sitedata.fax}}">{{sitedata.fax}}</a>
            </li>
            <li>
              <i class="far fa-envelope-open"></i>
              <a href="mailto:{{sitedata.email}}">{{sitedata.email}}</a>
            </li>
          </ul>
          <ul class="social-links clearfix">
            {%- for social in sitedata.socials -%}
              <li>
                <a href="{{social.url | url}}" title="{{social.name}}">
                  <i class="fab {{social.icon}}"></i>
                </a>
              </li>
            {%- endfor -%}

          </ul>
        </div>
      </div>
      <div class="col-lg-7 col-md-12 col-sm-12 form-column">
        <div class="form-inner">
          <form method="post" action="sendemail.php" id="contact-form" class="default-form">
            <div class="row clearfix">
              <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                <label class="lang" key="formadi">{{form.ad}}</label>
                <input type="text" name="username" placeholder="Your Name *" required="">
              </div>
              <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                <label class="lang" key="formemail">{{form.mail}}</label>
                <input type="email" name="email" placeholder="Your Email *" required="">
              </div>
              <div class="col-lg-6 col-md-12 col-sm-12 form-group">
                <label class="lang" key="formtelefon">{{form.tel}}</label>
                <input type="text" name="phone" required="" placeholder="Your Phone">
              </div>
              <div class="col-lg-6 col-md-12 col-sm-12 form-group">
                <label class="lang" key="formkonu">{{form.konu}}</label>
                <input type="text" name="subject" required="" placeholder="Subject">
              </div>
              <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                <label class="lang" key="formmesaj">{{form.mesaj}}</label>
                <textarea name="message" placeholder="Your Message ..."></textarea>
              </div>
              <div class="col-lg-12 col-md-12 col-sm-12 form-group message-btn">
                <button class="theme-btn-two lang" type="submit" name="submit-form" key="butongonder">Gönder</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- contact-section end -->

